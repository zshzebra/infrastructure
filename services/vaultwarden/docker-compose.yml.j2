services:
  vaultwarden:
    image: vaultwarden/server:latest
    container_name: vaultwarden
    restart: unless-stopped
    environment:
      DOMAIN: "https://{{ tunnel_hostnames['vaultwarden'] }}"
    volumes:
      - ./vw-data:/data
    networks:
      - vaultwarden-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:80/alive"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  tunnel:
    image: cloudflare/cloudflared:latest
    container_name: vaultwarden-tunnel
    restart: unless-stopped
    command: tunnel run
    environment:
      - TUNNEL_TOKEN={{ tunnel_token }}
    networks:
      - vaultwarden-network

networks:
  vaultwarden-network:
    driver: bridge
