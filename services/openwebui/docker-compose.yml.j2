services:
  openwebui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: openwebui
    restart: unless-stopped
    volumes:
      - open-webui:/app/backend/data
    networks:
      - openwebui-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 120s

  tunnel:
    image: cloudflare/cloudflared:latest
    container_name: openwebui-tunnel
    restart: unless-stopped
    command: tunnel run
    environment:
      - TUNNEL_TOKEN={{ tunnel_token }}
    networks:
      - openwebui-network

networks:
  openwebui-network:
    driver: bridge

volumes:
  open-webui:
    name: openwebui_open-webui
